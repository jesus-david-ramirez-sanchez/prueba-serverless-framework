{
    "name": "library-shop-api",
    "version": "1.0.0",
    "description": "API para gesti√≥n de libros con Serverless Framework",
    "main": "index.js",
    "scripts": {
        "deploy": "serverless deploy",
        "deploy:dev": "serverless deploy --stage dev",
        "deploy:prod": "serverless deploy --stage prod",
        "remove": "serverless remove",
        "dev": "serverless offline start --stage dev",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:unit": "jest --testPathIgnorePatterns=integration-tests",
        "test:integration": "jest --testPathPattern=integration-tests",
        "test:all": "jest --coverage --testPathPattern=integration-tests",
        "test:connection": "node test-connection.js"
    },
    "keywords": ["serverless", "aws", "lambda", "javascript"],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "serverless": "^4.18.1",
        "serverless-offline": "^14.0.0",
        "jest": "^29.7.0"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.450.0",
        "@aws-sdk/lib-dynamodb": "^3.450.0",
        "uuid": "^9.0.1",
        "joi": "^17.11.0"
    },
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": ["text", "lcov", "html"]
    }
}